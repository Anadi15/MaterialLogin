<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" android:background="#242729"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context="com.example.win8.materiallogin.MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/splash_img"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



    <EditText
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:background="#3f3f3f"
        android:hint="USER NAME"
        android:paddingLeft="20dp"
        android:textColorHint="#ffff"
        android:id="@+id/username"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <EditText
        android:paddingLeft="20dp"

        android:layout_width="330dp"
        android:layout_height="60dp"
        android:background="#3f3f3f"
        android:hint="PASSWORD"
        android:textColorHint="#ffff"
        android:id="@+id/password"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:text="LOGIN"
        android:id="@+id/buttonUserLogin"
   android:background="#DC143C"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_alignRight="@+id/password"
        android:layout_alignEnd="@+id/password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:id="@+id/textViewUserName"
        android:layout_above="@+id/buttonUserLogin"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FF0000"
        android:text="About App??"
        android:id="@+id/textViewAboutApp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
